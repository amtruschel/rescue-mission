<div class="row">
  <div class="col-md-12">
    <%= form_with model: [@question, @response] do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-8">
          <%= f.label :body %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :body, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-8">
          <%= f.submit "Update Response", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
